---
<%
  gpus = num_gpus.blank? ? 0 : num_gpus.to_i
%>
batch_connect:
  template: vnc
  #template: desktop
script:
  native:
    - "-A<%= slurm_account %>"
    - "-p<%= slurm_partition %>"
    - "-N 1"
    - "-c <%= bc_num_cores %>"
    - "--mem=<%= mem %>"
    <% if gpus > 0 %>- "--gpus=<%= gpu_str %>"<% end %>
    <% if not slurm_reservation.blank? %>- "--reservation=<%= slurm_reservation %>"<% end %>
